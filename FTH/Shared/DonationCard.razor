@using DTOs


@if (Model != null)
{
    <Card>
        <CardHeader>
            <CardTitle>
                @FormattedTitle
            </CardTitle>
        </CardHeader>
        <CardBody>
            <CardText>
                @Model.Comment
            </CardText>
        </CardBody>
    </Card>
}



@code
{
    [Parameter] public DonationDto Model { get; set; }


    private string FormattedTitle => Model.Name + (Model.Total == 0 ? "" : " - " + Model.Total.ToString("£0.00"));

}
